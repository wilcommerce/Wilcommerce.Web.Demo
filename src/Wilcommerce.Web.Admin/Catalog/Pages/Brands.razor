@page "/catalog/brands"

<div class="row">
    <div class="col">
        <h3>Brands</h3>
    </div>
    <div class="col-auto align-content-center">
        <a href="catalog/brands/create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Create new
        </a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col">
        <BrandSearchForm Model="queryModel"
                         OnBrandsFiltered="ApplyBrandsFilter"/>
    </div>
</div>
<div class="row">
    <div class="col">
        @if (brands == null || loading)
        {
            <Loader />
        }
        else
        {
            <BrandList Brands="brands"
                       OnBrandDeleteConfirmed="DeleteBrand"
                       OnBrandRestoreConfirmed="RestoreBrand"/>
        }
    </div>
</div>