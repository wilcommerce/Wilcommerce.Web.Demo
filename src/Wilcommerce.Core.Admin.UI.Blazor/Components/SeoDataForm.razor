<EditForm Context="context" Model="Model" OnValidSubmit="HandleSubmit" class="col-md-12 mt-3">
    <DataAnnotationsValidator />

    @if (Readonly && !editingEnabled)
    {
        <div class="form-group row">
            <button type="button" class="btn btn-outline-secondary" @onclick="EnableEditing">Edit data</button>
        </div>
    }

    <div class="form-group row">
        <label for="@nameof(Model.Title)">Title</label>
        <InputText @bind-Value="Model.Title" class="@formControlClass" />
        <ValidationMessage For="() => Model.Title" />
    </div>

    <div class="form-group row">
        <label for="@nameof(Model.Description)">Description</label>
        <InputText @bind-Value="Model.Description" class="@formControlClass" />
        <ValidationMessage For="() => Model.Description" />
    </div>

    <div class="form-group row">
        <label for="@nameof(Model.Keywords)">Keywords</label>
        <InputText @bind-Value="Model.Keywords" class="@formControlClass" />
        <ValidationMessage For="() => Model.Keywords" />
    </div>

    @if (!Readonly || editingEnabled)
    {
        <div class="form-group row align-content-end">
            <button type="button" class="btn btn-outline-primary mr-3">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</EditForm>