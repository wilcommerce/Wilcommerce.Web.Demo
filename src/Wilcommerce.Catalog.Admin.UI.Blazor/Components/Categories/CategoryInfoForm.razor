<EditForm Context="context" Model="Model" OnValidSubmit="HandleSubmit" class="col-md-12 mt-3">
    <DataAnnotationsValidator />

    <div class="form-group row">
        <label for="@nameof(Model.Code)">Code</label>
        <InputText @bind-Value="Model.Code" class="@formControlClass" />
        <ValidationMessage For="() => Model.Code" />
    </div>
    <div class="form-group row">
        <label for="@nameof(Model.Name)">Name</label>
        <InputText @bind-Value="Model.Name" class="@formControlClass" />
        <ValidationMessage For="() => Model.Name" />
    </div>
    <div class="form-group row">
        <label for="@nameof(Model.Url)">Url</label>
        <InputText @bind-Value="Model.Url" class="@formControlClass" />
        <ValidationMessage For="() => Model.Url" />
    </div>
    <div class="form-group row">
        <div class="form-check">
            <InputCheckbox @bind-Value="Model.IsVisible" />
            <label class="form-check-label" for="@nameof(Model.IsVisible)">Visible</label>
        </div>
    </div>
    @if (Model.IsVisible)
    {
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="@nameof(Model.VisibleFrom)">From</label>
                    <InputDate @bind-Value="Model.VisibleFrom" class="@formControlClass" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label for="@nameof(Model.VisibleTo)">To</label>
                    <InputDate @bind-Value="Model.VisibleTo" class="@formControlClass" />
                </div>
            </div>
        </div>
    }
    <div class="form-group row">
        <label for="@nameof(Model.Description)">Description</label>
        <InputTextArea @bind-Value="Model.Description" class="@formControlClass" />
        <ValidationMessage For="() => Model.Description" />
    </div>

    @if (!Readonly || editingEnabled)
    {
        <div class="form-group row align-content-end">
            <button type="reset" class="btn btn-outline-primary mr-3" @onclick="Cancel">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</EditForm>
