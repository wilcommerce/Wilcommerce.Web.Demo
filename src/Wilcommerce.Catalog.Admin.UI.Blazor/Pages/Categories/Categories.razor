@page "/catalog/categories"

<AdminPage Title="Categories">
    <Toolbar>
        <a href="catalog/categories/create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Create new
        </a>
    </Toolbar>
    <PageContent>
        <div class="row">
            <div class="col">
                <CategorySearchForm Model="queryModel"
                                    OnCategoriesFiltered="ApplyCategoriesFilter" />
            </div>
        </div>
        <div class="row">
            <div class="col">
                @if (categories == null || loading)
                {
                    <Loader />
                }
                else
                {
                    <CategoryList Categories="categories"
                                  OnCategoryDetailOpened="OpenCategoryDetail"
                                  OnCategoryDeleteConfirmed="DeleteCategory"
                                  OnCategoryRestoreConfirmed="RestoreCategory" />
                }
            </div>
        </div>
    </PageContent>
</AdminPage>
