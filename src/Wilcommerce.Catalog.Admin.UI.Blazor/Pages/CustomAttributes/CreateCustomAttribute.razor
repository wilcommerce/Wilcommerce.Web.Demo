@page "/catalog/customattributes/create"

<AdminPage Title="Create new Attribute">
    <Toolbar>
        <a href="catalog/customattributes" class="btn btn-primary">
            <i class="fas fa-chevron-circle-left"></i> Back to list
        </a>
    </Toolbar>
    <PageContent>
        @if (errorRaised)
        {
            <div class="row">
                <div class="col">
                    <Alert Color="Color.Danger">
                        <AlertMessage>Error saving the new attribute, please retry</AlertMessage>
                    </Alert>
                    <CloseButton />
                </div>
            </div>
        }
        <div class="row">
            <div class="col">
                <Tabs SelectedTab="generalInfo">
                    <Items>
                        <Tab Name="generalInfo">General Info</Tab>
                    </Items>
                    <Content>
                        <TabPanel Name="generalInfo">
                            <CustomAttributeInfoForm Model="model"
                                                     OnModelSaved="CreateNewCustomAttribute" />
                        </TabPanel>
                    </Content>
                </Tabs>
            </div>
        </div>
    </PageContent>
</AdminPage>
